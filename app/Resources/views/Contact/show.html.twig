{% extends '::base.html.twig' %}

{% block body %}
    <div class="header">
        <div class="hamburger hamburger--elastic" tabindex="0" aria-label="Menu" role="button" aria-controls="navigation">
            <div class="hamburger-box">
                <div class="hamburger-inner"></div>
            </div>
        </div>
        <nav class="nav" id="navigation">
            <ul class="menu-main">
                <li class="menu-main__item"><a class="menu-main__link" href="index.html">Showreel</a></li>
                <li class="menu-main__item"><a class="menu-main__link" href="portfolio.html">Портфолио</a></li>
                
                {{ render(controller('PageBundle:Page:getPageList')) }}

                <li class="menu-main__item"><a class="menu-main__link" href="team.html">Команда</a></li>
                <li class="menu-main__item"><a class="menu-main__link" href="contacts.html">Связаться с нами</a></li>
            </ul>
        </nav>
        <div class="menu-close-block" id="menu-close-block"></div>
    </div>
    <main class="main">
        <div class="article">
            <aside class="article__logo logo logo_size">
                <a class="logo__link" href="/"><img class="logo-i" src="{{ asset('img/svg/logo.svg') }}" alt=""></a>
            </aside>
            <article class="article__content">
                <div class="block-info">

                    {% set img = vich_uploader_asset(page, 'mainImageFile') %}
                    <img class="block-info__img" src="{{ img }}" alt="{{ page.title }}">

                    <h1 class="block-info__title">{{ page.title }}</h1>
                    <div class="block-info__content">
                        {{ page.content|raw }}
                    </div>
                </div>
                <footer class="footer">
                    <div class="footer__button"><a class="btn btn__link btn__link_top" href="form">Оставить заявку</a></div>
                </footer>
            </article>
        </div>
    </main>
{% endblock %}