            </div>
          </aside>
          <article class="article__content article__content_w">

            {% for entity in page %}
                <div class="block-img">
                    {% set img = vich_uploader_asset(entity, 'mainImageFile') %}
                    <img class="block-img__img" src="{{ img | imagine_filter('team_img') }}" alt="{{ entity.title }}">
                    <h2 class="block-img__title title-h">{{ entity.title }}</h2>
                    <div class="block-img__content">{{ entity.content|raw }}</div>
                </div>
            {% endfor %}
            
          </article>
        </div>
      </main>

{% endblock %}