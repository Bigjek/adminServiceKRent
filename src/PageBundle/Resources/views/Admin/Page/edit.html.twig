{% extends '::admin.html.twig' %}
{% import "AppBundle::translatable_macros.html.twig" as translations %}
{% block page_title %}
    Страница "{{ entity.title }}"
{% endblock %}
{% block page_subtitle %}
    редактирование
{% endblock %}
{% block page_content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                {{ form_start(edit_form) }}
                <div class="box-header with-border">
                    <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Создать</button>
                    <a  class="btn btn-danger" href="{{ path('admin_page') }}">
                        <i class="fa fa-ban"></i> Вернутсься к списку
                    </a>
                    <div class="pull-right">{{ translations.translatableTabs(edit_form.translations) }}</div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tab_1" data-toggle="tab">Основная информация</a></li>
                            <li><a href="#tab_2" data-toggle="tab">Дополнительная информация</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_1">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="box box-primary">
                                            <div class="box-header with-border">
                                                <div class="box-title">Заголовок</div>
                                            </div>
                                            <!-- /.box-header -->
                                            <div class="box-body">
                                                {{ translations.translatableFields(edit_form.translations, ['title']) }}
                                            </div>
                                            <!-- /.box-body -->
                                        </div>

                                    </div>
                                    <div class="col-md-12">
                                        <div class="box box-primary">
                                            <div class="box-header with-border">
                                                <div class="box-title">{{ form_label(edit_form.link) }}</div>
                                            </div>
                                            <!-- /.box-header -->
                                            <div class="box-body">
                                                {{ form_widget(edit_form.link) }}
                                            </div>
                                            <!-- /.box-body -->
                                        </div>

                                    </div>

                                    <div class="col-md-12">
                                        <div class="box box-primary">
                                            <div class="box-header with-border">
                                                <div class="box-title">Содержание</div>
                                            </div>
                                            <!-- /.box-header -->
                                            <div class="box-body">
                                                {{ translations.translatableFields(edit_form.translations, ['content']) }}
                                            </div>
                                            <!-- /.box-body -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="tab_2">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="box box-primary">
                                            <div class="box-header with-border">
                                                <div class="box-title">META</div>
                                            </div>
                                            <!-- /.box-header -->
                                            <div class="box-body">
                                                {# {{ form_row(edit_form.metaTitle) }}
                                                {{ form_row(edit_form.metaDescription) }}
                                                {{ form_row(edit_form.metaKeywords) }} #}
                                                {{ translations.translatableFields(edit_form.translations, ['metaTitle'],true) }}
                                                {{ translations.translatableFields(edit_form.translations, ['metaDescription'],true) }}
                                                {{ translations.translatableFields(edit_form.translations, ['metaKeywords'],true) }}
                                            </div>
                                            <!-- /.box-body -->
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="box box-primary">
                                            <div class="box-header with-border">
                                                <div class="box-title">Публиковать?</div>
                                            </div>
                                            <!-- /.box-header -->
                                            <div class="box-body">
                                                {{ form_row(edit_form.published) }}
                                            </div>
                                            <!-- /.box-body -->
                                        </div>
                                        <div class="box box-primary">
                                            <div class="box-header with-border">
                                                <div class="box-title">Строка для поиска</div>
                                            </div>
                                            <!-- /.box-header -->
                                            <div class="box-body">
                                                {{ form_row(edit_form.searchString) }}
                                            </div>
                                            <!-- /.box-body -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> сохранить</button>
                    <a  class="btn btn-danger" href="{{ path('admin_page') }}">
                        <i class="fa fa-ban"></i> Вернутсься к списку
                    </a>

                </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}
